{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",

  "required": [
    "version",
    "crypto"
  ],

  "properties": {
    "version": {
      "type": "integer",
      "minimum": 3,
      "maximum": 3
    },

    "address": {
      "type": "string",
      "pattern": "^(0x)?([0-f]|[A-F]){40}$"
    },

    "meta": {
      "type": "string"
    },

    "name": {
      "type": "string"
    },

    "crypto": {
      "type": "object",

      "required": [
        "cipher",
        "cipherparams",
        "ciphertext",
        "kdf",
        "kdfparams",
        "mac"
      ],

      "additionalProperties": false,

      "properties": {
        "cipher": {
          "type": "string"
        },
        "cipherparams": {
          "type": "object"
        },
        "ciphertext": {
          "type": "string"
        },
        "kdf": {
          "type": "string"
        },
        "kdfparams": {
          "type": "object"
        },
        "mac": {
          "type": "string",
          "pattern": "^[0-f]{64}$"
        }
      }
    }
  }
}
