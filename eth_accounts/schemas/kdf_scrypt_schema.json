{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",

  "properties": {
    "kdf": {
      "type": "string",
      "enum": ["scrypt"]
    },
    "kdfparams": {
      "type": "object",
      "requiredParams": [
        "r",
        "p",
        "n",
        "dklen",
        "salt"
      ],
      "additionalProperties": false,
      "properties": {
        "r": {
          "type": "integer",
          "minimum": 1
        },
        "p": {
          "type": "integer",
          "minimum": 1
        },
        "n": {
          "type": "integer",
          "minimum": 1
        },
        "dklen": {
          "type": "integer",
          "minimum": 1
        },
        "salt": {
          "type": "string",
          "pattern": "^[0-f]{64}$"
        }
      }
    }
  }
}
